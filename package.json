{
	"name": "@hashmark/cli",
	"version": "0.0.0",
	"description": "CLI for Hashmark documents",
	"main": "dist/index.js",
	"bin": {
		"hm": "dist/hm/index.js"
	},
	"keywords": [
		"Hashmark",
		"CLI"
	],
	"author": "Maxime Kjaer <maxime.kjaer@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@hashmark/parser": "0.0.4",
		"chalk": "^2.4.2",
		"yargs": "^13.2.4"
	},
	"devDependencies": {
		"@types/node": "^12.0.10",
		"@types/yargs": "^13.0.0",
		"prettier": "^1.18.2",
		"tslint": "^5.18.0",
		"typescript": "^3.5.2"
	},
	"scripts": {
		"build": "tsc",
		"format": "prettier --write {src,test}/**/*.ts *.json",
		"format:check": "prettier --check {src,test}/**/*.ts *.json",
		"tslint": "tslint --project tsconfig.json",
		"preversion": "npm run format:check && npm run tslint",
		"postversion": "git push && git push --tags"
	}
}
